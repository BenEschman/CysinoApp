<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_create_lobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Lobby"
        android:layout_centerInParent="true" />

    <ScrollView
        android:id="@+id/scroll_view_users"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/button_create_lobby"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/linear_layout_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/edit_text_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter User"
        android:layout_below="@id/scroll_view_users"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_add_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add User"
        android:layout_below="@id/edit_text_user"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_delete_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete User"
        android:layout_below="@id/edit_text_user"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_delete_lobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Lobby"
        android:layout_below="@id/button_add_user"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_user_lobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Lobby"
        android:layout_below="@id/button_delete_lobby"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

</RelativeLayout>
