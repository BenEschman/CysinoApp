<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Page Title -->
    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Log Out Button -->
    <Button
        android:id="@+id/logOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp" />

    <!-- Notification Switch -->
    <Switch
        android:id="@+id/notificationsSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:text="Notifications"
        app:layout_constraintTop_toBottomOf="@id/pageTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <!-- Brightness Adjustment Dial (SeekBar) -->
    <TextView
        android:id="@+id/brightnessLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brightness: 50"
        app:layout_constraintTop_toBottomOf="@id/notificationsSwitch"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp" />

    <SeekBar
        android:id="@+id/brightnessDial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/brightnessLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:max="100"
        android:progress="50"
        android:layout_marginEnd="16dp" />

    <!-- Online Status Switch -->
    <Switch
        android:id="@+id/onlineStatusSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:text="Show Online Status"
        app:layout_constraintTop_toBottomOf="@id/brightnessDial"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <!-- Reset Leaderboard Button -->
    <Button
        android:id="@+id/resetLeaderboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Leaderboard"
        app:layout_constraintTop_toBottomOf="@id/onlineStatusSwitch"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp" />

    <!-- Account Settings Button -->
    <Button
        android:id="@+id/accountSettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Settings"
        app:layout_constraintTop_toBottomOf="@id/resetLeaderboardButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp" />

    <!-- Dealer Stand-On Value -->
    <EditText
        android:id="@+id/dealerStandOnEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Dealer Stand-On Value"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/accountSettingsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/updateDealerStandOnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Dealer Stand-On"
        app:layout_constraintTop_toBottomOf="@id/dealerStandOnEdit"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <!-- Min Bet -->
    <EditText
        android:id="@+id/minBetEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Minimum Bet"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/updateDealerStandOnButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/updateMinBetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Min Bet"
        app:layout_constraintTop_toBottomOf="@id/minBetEdit"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <!-- Max Bet -->
    <EditText
        android:id="@+id/maxBetEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Maximum Bet"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/updateMinBetButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/updateMaxBetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Max Bet"
        app:layout_constraintTop_toBottomOf="@id/maxBetEdit"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <!-- Number of Decks -->
    <EditText
        android:id="@+id/numberOfDecksEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Number of Decks"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/updateMaxBetButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/updateNumberOfDecksButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Number of Decks"
        app:layout_constraintTop_toBottomOf="@id/numberOfDecksEdit"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>