<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35654D">

    <!-- Logo ImageView -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/cycinohp"
        android:contentDescription="Cycino Home Page Logo"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="75dp"
        android:paddingTop="150dp"
        android:paddingRight="75dp"
        android:layout_marginTop="100dp">



        <Button
            android:id="@+id/lobbyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gold"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="Lobby"
            android:textColor="@color/cardinal"
            android:textSize="20sp" />

        <Button
            android:id="@+id/leaderboardButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gold"
            android:padding="5dp"
            android:text="Leaderboard"
            android:textColor="@color/cardinal"
            android:textStyle="bold"
            android:textSize="20sp" />

        <Button
            android:id="@+id/friendsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gold"
            android:padding="5dp"
            android:text="Friends"
            android:textColor="@color/cardinal"
            android:textStyle="bold"
            android:textSize="20sp" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gold"
            android:padding="5dp"
            android:text="Settings"
            android:textColor="@color/cardinal"
            android:textStyle="bold"
            android:textSize="20sp" />

        <Button
            android:id="@+id/rulesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gold"
            android:padding="5dp"
            android:text="Rules and Information"
            android:textStyle="bold"
            android:textColor="@color/cardinal"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bankButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gold"
            android:padding="5dp"
            android:text="Add/Remove Chips"
            android:textStyle="bold"
            android:textColor="@color/cardinal"
            android:textSize="20sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>