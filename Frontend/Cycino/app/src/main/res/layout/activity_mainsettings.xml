<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" />

    <!-- Page Title -->
    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintEnd_toStartOf="@id/logOutButton"
        android:layout_marginTop="8dp" />

    <!-- Log Out Button -->
    <Button
        android:id="@+id/logOutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Log Out"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp" />

    <!-- Notification Switch -->
    <Switch
        android:id="@+id/notificationsSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        app:layout_constraintTop_toBottomOf="@id/pageTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <!-- Brightness Adjustment Dial (SeekBar) -->
    <TextView
        android:id="@+id/brightnessLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brightness: 50"
        app:layout_constraintTop_toBottomOf="@id/notificationsSwitch"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <SeekBar
        android:id="@+id/brightnessDial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/brightnessLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:max="100"
        android:progress="50"
        android:layout_marginEnd="16dp" />

    <!-- Online Status Switch -->
    <Switch
        android:id="@+id/onlineStatusSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Online Status"
        app:layout_constraintTop_toBottomOf="@id/brightnessDial"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <!-- Reset Leaderboard Button -->
    <Button
        android:id="@+id/resetLeaderboardButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reset Leaderboard"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toBottomOf="@id/onlineStatusSwitch"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Account Settings Button -->
    <Button
        android:id="@+id/accountSettingsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Account Settings"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toBottomOf="@id/resetLeaderboardButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Dealer Stand-On Value and Button -->
    <EditText
        android:id="@+id/dealerStandOnEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Dealer Stand-On Value"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/accountSettingsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/updateDealerStandOnButton"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/updateDealerStandOnButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Update"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintTop_toBottomOf="@id/accountSettingsButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Min Bet and Button -->
    <EditText
        android:id="@+id/minBetEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Minimum Bet"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/dealerStandOnEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/updateMinBetButton"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/updateMinBetButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Update"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintTop_toBottomOf="@id/dealerStandOnEdit"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Max Bet and Button -->
    <EditText
        android:id="@+id/maxBetEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Maximum Bet"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/minBetEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/updateMaxBetButton"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/updateMaxBetButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Update"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintTop_toBottomOf="@id/minBetEdit"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Number of Decks and Button -->
    <EditText
        android:id="@+id/numberOfDecksEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Number of Decks"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/maxBetEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/updateNumberOfDecksButton"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/updateNumberOfDecksButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Update"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintTop_toBottomOf="@id/maxBetEdit"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Dealer Stand-On Display -->
    <TextView
        android:id="@+id/dealerStandOnDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dealer Stand-On Value: 17"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/numberOfDecksEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Minimum Bet Display -->
    <TextView
        android:id="@+id/minBetDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Minimum Bet: 10"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/dealerStandOnDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Maximum Bet Display -->
    <TextView
        android:id="@+id/maxBetDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Maximum Bet: 100"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:background="@android:color/holo_orange_dark"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/minBetDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Number of Decks Display -->
    <TextView
        android:id="@+id/numberOfDecksDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Number of Decks: 2"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:background="@android:color/holo_red_dark"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/maxBetDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp" />





</androidx.constraintlayout.widget.ConstraintLayout>
