<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#B31B1B"
        android:backgroundTint="#FFD700"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Top TextView for Account Settings -->
    <TextView
        android:id="@+id/accountSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Settings"
        android:fontFamily="sans-serif-medium"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.75"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- EditText for Changing Username -->
    <EditText
        android:id="@+id/editUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Change Username"
        app:layout_constraintTop_toBottomOf="@id/accountSettingsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnChangeUsername"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp" />

    <!-- Button to Update Username -->
    <Button
        android:id="@+id/btnChangeUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textStyle="bold"
        android:textColor="#B31B1B"
        android:backgroundTint="#FFD700"
        app:layout_constraintTop_toTopOf="@id/editUsername"
        app:layout_constraintBottom_toBottomOf="@id/editUsername"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp" />

    <!-- EditText for Changing Password -->
    <EditText
        android:id="@+id/editPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Change Password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/editUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnChangePassword"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp" />

    <!-- Button to Update Password -->
    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textStyle="bold"
        android:textColor="#FFD700"
        android:backgroundTint="#B31B1B"
        app:layout_constraintTop_toTopOf="@id/editPassword"
        app:layout_constraintBottom_toBottomOf="@id/editPassword"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp" />

    <!-- EditText for Changing First Name -->
    <EditText
        android:id="@+id/editFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Change First Name"
        app:layout_constraintTop_toBottomOf="@id/editPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnChangeFirstName"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp" />

    <!-- Button to Update First Name -->
    <Button
        android:id="@+id/btnChangeFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textColor="#B31B1B"
        android:textStyle="bold"
        android:backgroundTint="#FFD700"
        app:layout_constraintTop_toTopOf="@id/editFirstName"
        app:layout_constraintBottom_toBottomOf="@id/editFirstName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp" />

    <!-- EditText for Changing Last Name -->
    <EditText
        android:id="@+id/editLastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Change Last Name"
        app:layout_constraintTop_toBottomOf="@id/editFirstName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnChangeLastName"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp" />

    <!-- Button to Update Last Name -->
    <Button
        android:id="@+id/btnChangeLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textStyle="bold"
        android:textColor="#FFD700"
        android:backgroundTint="#B31B1B"
        app:layout_constraintTop_toTopOf="@id/editLastName"
        app:layout_constraintBottom_toBottomOf="@id/editLastName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp" />

    <!-- EditText for Changing Phone Number -->
    <EditText
        android:id="@+id/editPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Change Phone Number"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/editLastName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnChangePhoneNumber"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp" />

    <!-- Button to Update Phone Number -->
    <Button
        android:id="@+id/btnChangePhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textStyle="bold"
        android:textColor="#B31B1B"
        android:backgroundTint="#FFD700"
        app:layout_constraintTop_toTopOf="@id/editPhoneNumber"
        app:layout_constraintBottom_toBottomOf="@id/editPhoneNumber"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp" />

    <!-- Button for Deleting Account -->

    <!-- Button for User Page -->
    <Button
        android:id="@+id/userPageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Page"
        android:textColor="#FFFFFF"
        android:backgroundTint="#006400"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/editPhoneNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <Button
        android:id="@+id/deleteAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Account"
        android:textColor="#B31B1B"
        android:backgroundTint="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>